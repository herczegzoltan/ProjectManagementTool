@model int

<button type="submit" class="btn btn-success btn-icon-split" asp-route-id="@Model">
    <span class="icon text-white-50">
        <i class="fas fa-check"></i>
    </span>
    <span class="text">Update</span>
</button>

<a #href asp-action="" asp-controller="IssueItem" asp-route-id="@Model" class="btn btn-danger btn-icon-split">
    <span class="icon text-white-50">
        <i class="fas fa-trash"></i>
    </span>
    <span class="text">Delete</span>
</a>

<a #href asp-action="Details" asp-controller="IssueItem" asp-route-id="@Model" class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50">
        <i class="fas fa-chevron-left"></i>
    </span>
    <span class="text">Back to Ticket</span>
</a>
