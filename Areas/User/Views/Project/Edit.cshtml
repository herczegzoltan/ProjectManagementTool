@model Project
@{
    ViewData["Title"] = "Edit Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Project</h1>

<form method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" type="text" class="form-control">
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Description" class="form-control" rows="3" style="min-height: 150px;"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
               <partial name="project/_EditAndBackToListButtonPartial" model="Model.Id"/>
            </div>
        </div>
    </div>
</form>
