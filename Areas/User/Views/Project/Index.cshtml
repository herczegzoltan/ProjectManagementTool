@model IEnumerable<Project>

@{
    ViewData["Title"] = "Project Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<br/>

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Project List</h2>
        </div>
        <div class="col-6 text-right">
            <a href# asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <br />

    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="card">
                <h5 class="card-header">@Html.DisplayFor(m=>item.Title)</h5>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(m=>item.Description)</p>
                    <partial name="_LoadTaskEditDeleteButtonsPartial" model="item.Id"/>
                </div>
            </div>
            <br />
        }
    }
    else
    {
        <p>No project exists...</p>
    }
    </div>