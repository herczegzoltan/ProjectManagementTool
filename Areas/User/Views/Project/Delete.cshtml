@model Project
@{
    ViewData["Title"] = "Delete Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Project</h1>

<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" type="text" readonly class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Description" readonly class="form-control" rows="3" style="min-height: 150px;"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButtonPartial" model="Model.Id"/>
            </div>
        </div>
    </div>
</form>