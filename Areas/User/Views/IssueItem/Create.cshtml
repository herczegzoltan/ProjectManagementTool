@using ProjectManagementTool.Extensions
@model IssueItem
@{
    ViewData["Title"] = "Create Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Task..</h1>

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.Description)
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        @*<div class="form-group row">
            <div class="col-2">
                <label asp-for="MenuItem.Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Type" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Type" id="CategoryId" asp-items="Html.GetEnumSelectList<IssueItem.EType>()" class="form-control"></select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Priority" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Priority" id="CategoryId" asp-items="Html.GetEnumSelectList<IssueItem.EPriority>()" class="form-control"></select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Status" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Status" id="CategoryId" asp-items="Html.GetEnumSelectList<IssueItem.EStatus>()" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" value="Create"/>
                    </div>
                    <div class="col-6">
                        <a #href asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
