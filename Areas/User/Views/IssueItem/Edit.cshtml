@using ProjectManagementTool.Extensions
@using Microsoft.CodeAnalysis
@model IssueItem
@{
    ViewData["Title"] = "Edit Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<br/>
<form method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Description" class="form-control" rows="3" style="min-height: 150px;"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Type" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<IssueItem.EType>()" class="form-control"></select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Priority" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<IssueItem.EPriority>()" class="form-control"></select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Status" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<IssueItem.EStatus>()" class="form-control"></select>
            </div>
        </div>

        <div class="col-5 offset-2">
            <partial name="issueitem/_EditAndBackToListButtonPartial" model="Model.Id"/>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}